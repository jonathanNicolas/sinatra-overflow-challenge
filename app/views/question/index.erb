<div class="container">
  <br>
  <% @questions.each do |question| %>
  <div class="question-summary">
    <div class="count-container">
      <div class="count-square">
        <h3><%= question.vote_total %></h3>
        <h5>votes</h5>
      </div>
      <div class="count-square">
        <h3><%= @num_ans[question.id] %></h3>
        <h5>answers</h5>
      </div>
  </div>
  <h2><a href="/questions/<%= question.id %>"><%= question.title %></a></h2>
  <h3 class="created_by_tag"><%= question.time_since_creation %> ago by <a href="/users/<%= @user_ids[question.id] %>"><%= @usernames[question.id] %></a></h3>
</div>
<% end %>
</div>