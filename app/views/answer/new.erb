<div class="container">
  <form class="form-horizontal" action="/questions/<%= @question.id %>/answers/new" method="POST">
  <fieldset>

  <!-- Form Name -->
  <legend>Post Answer</legend>

  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="textarea"></label>
    <div class="col-md-4">
      <textarea class="form-control" id="text" name="text" rows="10" cols="50" placeholder="Hey, good idea!"></textarea>
    </div>
  </div>

  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="post-answer"></label>
    <div class="col-md-4">
      <button id="post-answer" name="post-answer" class="btn btn-primary">Post Answer</button>
    </div>
  </div>

  </fieldset>
  </form>
</div>